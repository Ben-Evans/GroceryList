<!-- DefaultFocus="DefaultFocus.LastChild" -->
<MudDialog>
    <DialogContent>
        @*<MudText>@ContentText</MudText>*@
        @ChildContent
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    //[Parameter] public string ContentText { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; } = @<text>Do you really want to delete these records? This process cannot be undone.</text>;

    [Parameter] public string ButtonText { get; set; } = "Yes";

    [Parameter] public Color Color { get; set; } = Color.Error;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
