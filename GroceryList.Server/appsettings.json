{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=grocery-list;User Id=;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "BaseAddress": "https://localhost:7152",
  "BlazorClientBaseAddress": "https://localhost:7812",
  "BlazorClientLocalBaseAddress": "",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "*Server's Entra ID - Domain*",
    "TenantId": "*Server's Entra ID App Registration - Directory (tenant) ID*",
    "ClientId": "*Server's Entra ID App Registration - Application (client) ID*",
    "Audience": "*Server's Entra ID App Registration - App ID URI*",
    "CallbackPath": "/signin-oidc"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/_framework/%' or RequestPath like '/%.css' or RequestPath like '/%.js' or RequestPath like '/favicon.ico' or RequestPath like '/appsettings%' or RequestPath like '/Resources%'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%APP_BASE_DIR%Resources/Logs/grocery-list_.log",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Grocery-List"
    }
  }
}
